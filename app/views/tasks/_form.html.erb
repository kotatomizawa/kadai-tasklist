<div class="row">
  <div class="col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">
    <%= form_for(task) do |f| %>
      <% if task.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(task.errors.count, "error") %> prohibited this message from being saved:</h2>
    
          <ul>
            <% task.errors.full_messages.each do |task| %>
              <li><%= task %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    
      <div class="form-group">
        <%= f.label :status, 'Status' %>
        <%= f.text_field :status, class: 'form-control' %>
      </div>
    
      <div>
        <%= f.label :content, 'Task' %>
        <%= f.text_field :content, class: 'form-control' %>
      </div>
      <%= f.submit '送信' %>
    <% end %>
  </div>
</div>
<a class="btn btn-success" href="tasks/new" role="button">add New Task</a>
<ul class="media-list">
  <% @tasks.each do |task| %>
    <li class="media">
      <div class="media-body">
        <div>
          <%= link_to task.user.name, user_path(task.user) %> <span class="text-muted">posted at <%= task.created_at %></span>
        </div>
        <div>
          <p>タスク内容＝<%= task.content %></p>
          <p>ステータス＝<%= task.status %></p>
          <%= link_to 'Delete', task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
          <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-primary btn-xs' %>
          <%= link_to 'show detail', task_path(task), class: 'btn btn-primary btn-xs' %>
        </div>
      </div>
    </li>
  <% end %>
</ul>

<%= paginate @tasks %>
